<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - DemoQRCode</title>

    <!-- Font hiện đại -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

    <!-- Bootstrap & Animate -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Global Styles -->
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(to bottom right, #f3f4f6, #e9ecef);
            color: #2c3e50;
            margin: 0;
            padding: 0;
        }

        h1, h2, h3, h4 {
            font-weight: 600;
            color: #1f2d3d;
        }

        p, li {
            font-size: 1.05rem;
            line-height: 1.7;
        }

        /* Navbar */
        .navbar {
            background: #ffffff;
            border-bottom: 1px solid #dee2e6;
        }
        .nav-link {
            transition: transform 0.3s, color 0.3s;
        }
        .nav-link:hover {
            transform: scale(1.05);
            color: #0d6efd !important;
        }

        /* Container style */
        .container {
            max-width: 960px;
            margin: auto;
            padding: 40px 20px;
        }

        /* Footer */
        footer {
            background: #1e1e2f;
            color: #ffffff;
            padding: 20px 0;
            text-align: center;
        }
        footer a {
            color: #0d6efd;
            text-decoration: none;
            transition: transform 0.3s, color 0.3s;
        }
        footer a:hover {
            transform: translateY(-4px);
            color: #66b2ff;
        }
        .footer-social-icons {
            margin-top: 8px;
        }
        .footer-social-icons a {
            font-size: 1.5rem;
            margin: 0 10px;
            color: #ffffff;
            transition: transform 0.3s, color 0.3s;
        }
        .footer-social-icons a:hover {
            transform: scale(1.2);
            color: #0d6efd;
        }
    </style>

    <script>
        // Smooth scroll for footer links
        document.addEventListener('DOMContentLoaded', function () {
            const footerLinks = document.querySelectorAll('footer a');
            footerLinks.forEach(link => {
                link.addEventListener('click', function (e) {
                    if (this.getAttribute('href').startsWith("#")) {
                        e.preventDefault();
                        const targetId = this.getAttribute('href').substring(1);
                        const targetElement = document.getElementById(targetId);
                        if (targetElement) {
                            window.scrollTo({
                                top: targetElement.offsetTop,
                                behavior: 'smooth'
                            });
                        }
                    }
                });
            });
        });
       
    </script>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light animate__animated animate__fadeIn shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">DemoQRCode</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="QRCode" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="About">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Information">What is QR Code?</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container animate__animated animate__zoomIn">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="animate__animated animate__slideInUp">
    <div class="container">
        <p class="mb-1">&copy; 2025 - DemoQRCode - <a asp-controller="Home" asp-action="Privacy">Privacy</a></p>
        <div class="footer-social-icons">
            <a href="https://instagram.com" target="_blank"><i class="bi bi-instagram"></i></a>
            <a href="https://github.com" target="_blank"><i class="bi bi-github"></i></a>
        </div>
    </div>
</footer>

<!-- Scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
